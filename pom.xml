<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>no.api.maven-projects</groupId>
        <artifactId>v3-super-pom</artifactId>
        <version>2.273</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>no.api.syzygy</groupId>
    <artifactId>syzygy</artifactId>
    <packaging>pom</packaging>
    <version>0.0.1</version>
    <scm>
        <connection>scm:git:ssh://git@github.com/amedia/syzygy.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/amedia/syzygy.git</developerConnection>
      <tag>syzygy-0.0.1</tag>
  </scm>

    <properties>
        <site.name /> <!-- Yes, we need this property -->
        <fabric8.version>2.0.21</fabric8.version>
    </properties>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>no.api.syzygy</groupId>
                <artifactId>syzygy-etcd</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>no.api.syzygy</groupId>
                <artifactId>syzygy-core</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>no.api.pantheon</groupId>
                <artifactId>pantheon-core</artifactId>
                <version>${pantheon.version}</version>
            </dependency>

            <dependency>
                <groupId>io.fabric8.etcd.reader</groupId>
                <artifactId>fabric-etcd-reader-jackson</artifactId>
                <version>${fabric8.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>commons-logging</groupId>
                        <artifactId>commons-logging</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>${jackson.version}</version>
            </dependency>

            <dependency>
                <groupId>com.fasterxml.jackson.dataformat</groupId>
                <artifactId>jackson-dataformat-yaml</artifactId>
                <version>${jackson.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>


    <modules>
        <module>syzygy-core</module>
        <module>syzygy-etcd</module>
    </modules>

</project>
